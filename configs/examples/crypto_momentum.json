{
  "strategy_name": "Crypto Spot Momentum Strategy",
  "description": "Momentum strategy for crypto spot using 20-period returns",
  "instrument": {
    "asset_type": "CRYPTO_SPOT",
    "symbols": ["BTC/USDT", "ETH/USDT", "BNB/USDT", "SOL/USDT"],
    "venue": "binance",
    "base_currency": ["BTC", "ETH", "BNB", "SOL"],
    "quote_currency": "USDT",
    "lot_size": 0.0001,
    "allow_fractional": true,
    "shortable": true,
    "leverage": 1
  },
  "session": {
    "calendar": "CRYPTO_24_7",
    "timezone": "UTC",
    "trading_hours": "ALL_DAY"
  },
  "data": {
    "source": "ccxt",
    "frequency": "1H",
    "price_mode": "raw",
    "start_date": "2022-01-01",
    "end_date": "2024-12-31"
  },
  "features": {
    "lookback_period": 24,
    "indicators": {
      "momentum": {
        "period": 24,
        "type": "returns"
      }
    },
    "signals": {
      "long_threshold": 0.01,
      "short_threshold": -0.01
    }
  },
  "backtest": {
    "initial_capital": 10000,
    "commission": 0.001,
    "slippage": 0.0005
  },
  "performance": {
    "parallel_backend": "joblib",
    "max_workers": 4,
    "cache_enabled": true,
    "vectorbt_chunking": 50
  },
  "validation": {
    "walk_forward": false,
    "sensitivity": false,
    "bootstrap": true,
    "regime_split": false,
    "leakage_checks": true
  }
}
